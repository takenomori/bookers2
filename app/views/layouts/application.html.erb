<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <div class="container-fluid" style='background-color: black;'>

        <h1 class="nav navbar-nav navbar-left" style='color: white;'>Bookers</h1>
        <nav>
          <ul class="nav navbar-nav navbar-right">
            <% if user_signed_in? %>
              <li><%= link_to "Home", user_path(current_user.id),class:"glyphicon glyphicon-home home navia silver"%></li>
              <li><%= link_to "Users", users_path,class:"glyphicon glyphicon-link about navia silver" %></li>
              <li><%= link_to "Books", books_path,class:"glyphicon glyphicon-book books navia silver" %></li>
              <li><%= link_to "Logout", destroy_user_session_path, method: :delete,class:"glyphicon glyphicon-edit log_out navia silver" %></li>
            <% else %>
              <li><%= link_to "home", root_path,class:"glyphicon glyphicon-home home navia silver" %></li>
              <li><%= link_to "About", about_path,class:"glyphicon glyphicon-link about navia silver" %></li>
              <li><%= link_to "sign up", new_user_registration_path,class:"glyphicon glyphicon-edit sign_up navia silver" %></li>
              <li><%= link_to "login",new_user_session_path,class:"glyphicon glyphicon-log-in sign_in navia silver" %></li>
            <% end %>
          </ul>
        </nav>

      </div>
    </header>
      <%= yield %>
  </body>
</html>
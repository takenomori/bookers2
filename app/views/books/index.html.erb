<div class="col-lg-4" > 

<div class="form_create">
		<h2>User info</h2>
			<table class="table">
				<%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %>
				<tbody>
					<tr>
						<th>name</th>
						<th><%= @user.username %></th>
					</tr>
					<tr>
						<th>introduction</th>
						<th><%= @user.comment %></th>
					</tr>
				</tbody>
			</table>
			<% if @user.id == current_user.id %>
			<%= link_to "" , edit_user_path(current_user.id), class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench edit_user_#{@user.id}" %>
			<%end%>
		<div class="action row"></div>

<h1>New book</h1>

    <% if @book.errors.any? %>
        <div class="alert alert-warning">
        <ul>
            <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
            <% end %>
        </ul>
        </div>
    <% end %>

    <%= form_for(@book) do |f| %>


        <h4>title</h4>
        <%= f.text_field :title %>

        <h4>opinion</h4>
        <%= f.text_area :body %>

        <p>
        <%= f.submit 'Create Book' %>
        </p>
    <% end %>

</div>


<h1>Books</h1>

<div class="col-lg-8">
    <div class="container"> 
        <div class="row"> 
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Title</th>
                        <th>Opinion</th>
                        <th colspan="3"></th>
                    </tr>
                </thead>
                <tbody>
                    <% @books.each do |book| %>
                        <tr>
                            <td><%= book.title %></td>
                            <td><%= book.body %></td>
                        </tr>
                        
                    <% end %>
                </tbody>
            </table>
        </div>
    </div>
</div>



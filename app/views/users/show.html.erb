<div class="col-lg-4" > 

<h1>User info</h1>



<h1>New book</h1>

    <% if @book.errors.any? %>
        <div class="alert alert-warning">
        <ul>
            <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
            <% end %>
        </ul>
        </div>
    <% end %>

    <%= form_for(@book) do |f| %>


        <h4>title</h4>
        <%= f.text_field :title %>

        <h4>opinion</h4>
        <%= f.text_area :body %>

        <p>
        <%= f.submit 'Create Book' %>
        </p>
    <% end %>

</div>


<h1>Books</h1>

<div class="col-lg-8">
    <div class="container"> 
        <div class="row"> 
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Title</th>
                        <th>Opinion</th>
                        <th colspan="3"></th>
                    </tr>
                </thead>
                <tbody>
                    <% @books.each do |book| %>
                        <tr>
                            <td><%= book.title %></td>
                            <td><%= book.body %></td>
                        </tr>
                        
                    <% end %>
                </tbody>
            </table>
        </div>
    </div>
</div>



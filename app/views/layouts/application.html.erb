<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="page-header" style="background-color: black;">

      <h4>Bookers</h4>

    <div class='text-muted'>
      <div id="slidemenu">
      <ul class="nav navbar-nav navbar-right" data-hover="dropdown" data-animations="zoomIn fadeIn fadeInUp fadeIn">
        
        <% if user_signed_in? %>
          <span class="glyphicon glyphicon-home"aria-hidden="true"></span>
            <%= link_to 'Home', user_path(current_user.id) %>

          <span class="glyphicon glyphicon-user" aria-hidden="true"></span>
            <%= link_to 'Users', users_path %>

          <span class="glyphicon glyphicon-book" aria-hidden="true"></span>
            <%= link_to 'Books', books_path %>
          
          <span class="glyphicon glyphicon-log-out" aria-hidden="true"></span>
            <%= link_to "logout", destroy_user_session_path, method: :delete %>
        
        <% else %>

          <span class="glyphicon glyphicon-home" aria-hidden="true"></span>
            <a href="/home/top"> Home</a>
          

            <a href="/home/about"> About</a>

            <%= link_to "Sign up", new_user_registration_path %>

            <%= link_to "loghin", new_user_session_path %>
        <% end %>

      </ul>
      </div>
    </div>
  </div>

    <%= yield %>

  </body>
</html>

<div class="container">
    <div class="row">
        <%= render 'users/list', user: @user,book: @book %>
        <div class="col-xs-9">
            <h2>Users</h2>
            <table class="table">
                <tbody>
                    <tr>
                        <th>Image</th>
                        <th>Name</th>
                        <!-- <th>Introduction</th> -->
                        <th colspan="4"></th>
                    </tr>
                    <% @users.each do |user| %>
                    <tr>
                        <th><%= attachment_image_tag user, :profile_image, :fill, 60,60, size: "100x100", format: "jpeg",fallback: "no-image-icon.jpg" %></th>
                        <th><%= user.name %></th>
                        <!-- <td><%= user.introduction %></td>-->
                        <td><%= link_to "Show", user_path(user.id) %>
                    </tr>
                    <% end %>
                </tbody>
            </table>
        </div>
    </div>
</div>

